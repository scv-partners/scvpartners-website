---
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'
import Hero from '../components/hero.astro'
import SEO from '../components/SEO.astro'

export interface Props {
  category?: string;
  title?: string;
  description?: string;
  canonical?: string;
  image?: string;
  noindex?: boolean;
}

const { category, title, description, canonical, image, noindex } = Astro.props
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <SEO 
      title={title}
      description={description}
      canonical={canonical}
      image={image}
      noindex={noindex}
    />
  </head>
  <body>
    <Header />
    <Hero category={category} />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
