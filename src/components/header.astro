---
import { menu, submenu } from "./menu";
---

<header
  class="w-full fixed top-0 left-0 h-16 md:h-20 p-3
  border-b-[1px] border-gray-200 bg-white
  transition-colors duration-500
  text-gray-800 z-50 shadow-sm"
>
  <nav class="max-w-6xl mx-auto flex justify-between items-center font-bold">
    <div class="">
      <a href="/">
        <img
          src="/scv-partners-logo.png"
          alt="SCV 파트너스 Logo"
          class="w-[60px] md:w-[80px]"
        />
      </a>
    </div>

    <ul
      class="md:flex hidden justify-center items-center
      h-full gap-20 px-10
      text-sm md:text-xl font-bold"
    >
      {
        Object.keys(menu).map((key) => (
          <li class="group relative">
            <a href={`/${key}`} class="hover:text-primary transition-colors">
              {menu[key]}
            </a>
            <div class="absolute hidden group-hover:block top-full left-0 bg-white border border-gray-200 shadow-lg rounded-lg min-w-48">
              <ul class="py-2">
                {submenu[key].map((item) => (
                  <li>
                    <a
                      href={item.link}
                      class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary"
                    >
                      {item.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          </li>
        ))
      }
    </ul>

    <div>
      <button id="menuButton" class="p-2 rounded-md" aria-label="Menu">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div
    id="mobileMenu"
    class="fixed inset-y-0 right-0 w-1/2 bg-black bg-opacity-90 z-50 hidden"
  >
    <div class="flex justify-end p-4">
      <button id="closeMenu" class="text-white p-2" aria-label="Close menu">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <nav class="flex flex-col items-center h-full pt-16">
      <ul class="flex flex-col gap-8 text-xl text-white">
        {
          Object.keys(menu).map((key) => (
            <li class="text-center">
              <a href={`/${key}`} class="hover:underline underline-offset-4">
                {menu[key]}
              </a>
              <ul class="mt-2 space-y-2 text-base text-gray-300">
                {submenu[key].map((item) => (
                  <li>
                    <a
                      href={item.link}
                      class="hover:underline underline-offset-4"
                    >
                      {item.name}
                    </a>
                  </li>
                ))}
              </ul>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<script>
  const header = document.querySelector("header");
  const menuButton = document.getElementById("menuButton");
  const mobileMenu = document.getElementById("mobileMenu");
  const closeMenu = document.getElementById("closeMenu");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 0) {
      header?.classList.add("shadow-md");
      header?.classList.remove("shadow-sm");
    } else {
      header?.classList.remove("shadow-md");
      header?.classList.add("shadow-sm");
    }
  });

  // Mobile menu toggle
  menuButton?.addEventListener("click", () => {
    mobileMenu?.classList.remove("hidden");
    document.body.style.overflow = "hidden";
  });

  closeMenu?.addEventListener("click", () => {
    mobileMenu?.classList.add("hidden");
    document.body.style.overflow = "auto";
  });
</script>
